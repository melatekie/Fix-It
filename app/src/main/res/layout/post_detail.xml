<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <import type="android.view.View"/>
        <variable
            name="user"
            type="com.example.fixit.User" />
        <variable
            name="post"
            type="com.example.fixit.Post" />

    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".DetailPost">

        <androidx.coordinatorlayout.widget.CoordinatorLayout
            android:id="@+id/fragmentLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.google.android.material.appbar.AppBarLayout
                android:id="@+id/appBarLayout2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:liftOnScroll="true">

                <com.google.android.material.appbar.MaterialToolbar
                    android:id="@+id/topAppBar"
                    android:layout_width="match_parent"
                    android:layout_height="373dp"
                    app:navigationIcon="@drawable/ic_back">

                    <TextView
                        android:id="@+id/tvUsername"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="false"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginBottom="340dp"
                        android:foregroundGravity="center_horizontal"
                        android:text="@{post.getAuthor().getUsername()}"
                        android:textColor="@color/orange"
                        android:textStyle="bold" />


                </com.google.android.material.appbar.MaterialToolbar>

            </com.google.android.material.appbar.AppBarLayout>

            <TextView
                android:id="@+id/tvQuestion"
                android:layout_width="320dp"
                android:layout_height="75dp"
                android:layout_marginBottom="180dp"
                app:layout_anchor="@+id/appBarLayout2"
                app:layout_anchorGravity="center" />

            <ImageView
                android:id="@+id/ivProblem"
                android:layout_width="174dp"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_marginBottom="0dp"
                app:layout_anchor="@+id/appBarLayout2"
                app:layout_anchorGravity="bottom|center"
                tools:srcCompat="@tools:sample/avatars" />

            <ImageView
                android:id="@+id/ivProfileImage"
                android:layout_width="54dp"
                android:layout_height="53dp"
                android:layout_margin="45dp"
                android:loadImage="@{user}"
                app:layout_anchor="@+id/appBarLayout2" />

            <TextView
                android:id="@+id/tvName"
                android:layout_width="101dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="180dp"
                android:layout_marginBottom="310dp"
                android:text="Name"
                android:textColor="#000000"
                android:textStyle="bold"
                app:layout_anchor="@+id/tvQuestion"
                app:layout_anchorGravity="top|center" />

            <ImageView
                android:id="@+id/ivLikes"
                android:layout_width="32dp"
                android:layout_height="28dp"
                android:layout_marginLeft="10dp"
                app:layout_anchor="@+id/appBarLayout2"
                app:layout_anchorGravity="start|bottom"
                app:srcCompat="@drawable/heartblank" />

            <ImageView
                android:id="@+id/ivReply"
                android:layout_width="32dp"
                android:layout_height="28dp"
                android:layout_marginLeft="70dp"
                app:layout_anchor="@+id/appBarLayout2"
                app:layout_anchorGravity="start|bottom"
                app:srcCompat="@drawable/message_check" />

        </androidx.coordinatorlayout.widget.CoordinatorLayout>

        <ImageView
            android:id="@+id/ivComments"
            android:layout_width="wrap_content"
            android:layout_height="294dp"
            android:layout_below="@+id/fragmentLayout"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="76dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="5dp"
            app:srcCompat="@drawable/commentbubble" />

        <ImageView
            android:id="@+id/ivCommentProfile"
            android:layout_width="54dp"
            android:layout_height="53dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="3dp"
            android:layout_marginEnd="3dp"
            android:layout_marginBottom="29dp"
            android:layout_toStartOf="@+id/ivComments"
            app:srcCompat="@drawable/default_img" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="129dp"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/ivComments"
            android:layout_alignEnd="@+id/ivComments"
            android:layout_alignParentStart="true"

            android:layout_marginStart="75dp"
            android:layout_marginTop="27dp"
            android:layout_marginEnd="187dp"
            android:text="Comment Name"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvComments"
            android:layout_width="wrap_content"
            android:layout_height="74dp"
            android:layout_alignTop="@+id/ivComments"
            android:layout_alignEnd="@+id/ivComments"
            android:layout_alignParentStart="true"

            android:layout_marginStart="78dp"
            android:layout_marginTop="51dp"
            android:layout_marginEnd="19dp"
            android:text="Comments"
            android:textStyle="bold" />


    </RelativeLayout>

</layout>